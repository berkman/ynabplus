<h1>Accounts</h1>
<table>
  <tr>
    <th>Account</th>
    <th>Type</th>
    <th>Balance</th>
  </tr>
<% @accounts.sort { |a,b| a.name <=> b.name }.each do |account| %>
  <tr>
    <td><%= account.name %></td>
    <td><%= account.type %></td>
    <td><%= number_to_currency(account.balance/1000.to_d) %></td>
  </tr>
<% end %>
</table>
